@model Nop.Plugin.Widgets.SwipeSliderPro.Models.ConfigurationModel
@using Nop.Plugin.Widgets.SwipeSliderPro.Models
@using Nop.Services

@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync("StoreScopeConfiguration")
<form asp-controller="WidgetsSwipeSliderPro" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading" data-toggle="collapse" data-target="#slides">
                <i class="toggle-icon fa fa-plus"></i>
                <span>Set Slides</span>
            </div>
            <div id="slides" class="panel-body collapse">
                @await Html.PartialAsync("~/Plugins/Widgets.SwipeSliderPro/Views/Configure.Slides.cshtml")
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading" data-toggle="collapse" data-target="#swipeType" aria-expanded="true">
                <i class="toggle-icon fa fa-plus"></i>
                <span>Swipe Type</span>
            </div>
            <div id="swipeType" class="panel-body collapse">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="@Model.SwipeType" />
                    </div>
                    <div class="col-md-9">
                        <div class="col-md-9">
                            <nop-select asp-for="@Model.SwipeType" asp-items="@(((SwipeTypeEnum)Model.SwipeType).ToSelectList())" />
                            <span asp-validation-for="@Model.SwipeType"></span>
                        </div>
                        <div class="col-md-3">
                            <a href="https://swiperjs.com/demos/" target="_blank">Show All Demos</a>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Plugins/Widgets.SwipeSliderPro/Views/SwipeTypes/DefaultConfigure.cshtml")
                @await Html.PartialAsync("~/Plugins/Widgets.SwipeSliderPro/Views/SwipeTypes/CoverflowEffect3DConfigure.cshtml")
            </div>
        </div>


        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>