@model Nop.Plugin.Widgets.SwipeSliderPro.Models.PublicInfoModel
@{
    Layout = "";

    Html.AddScriptParts(ResourceLocation.Head, "https://unpkg.com/swiper/js/swiper.js");
    Html.AddScriptParts(ResourceLocation.Head, "https://unpkg.com/swiper/js/swiper.min.js");
    Html.AddCssFileParts("https://unpkg.com/swiper/css/swiper.css");
    Html.AddCssFileParts("https://unpkg.com/swiper/css/swiper.min.css");
    Html.AppendHeadCustomParts(@"<style>
.swiper-container {
width: 100%;
padding-top: 50px;
padding-bottom: 50px;
}

.swiper-slide {
background-position: center;
background-size: cover;
position: relative;
width: 30% !important;
padding-top: 45% !important;
}
</style>
");
    Html.AddInlineScriptParts(ResourceLocation.Footer, @"<script>
var swiper = new Swiper('.swiper-container', {
effect: 'coverflow',
grabCursor: true,
centeredSlides: true,
slidesPerView: 'auto',
initialSlide: 5,
coverflowEffect: {
    rotate: 50,
    stretch: 0,
    depth: 100,
    modifier: 1,
    slideShadows: true,
},
autoplay: {
    delay: 2500,
    disableOnInteraction: false,
},
pagination: {
    el: '.swiper-pagination',
},
});
</script>");
}


<div class="swiper-container">
    <div class="swiper-wrapper">
        <div class="swiper-slide" style="background-image:url(../images/cover01.jpg)"></div>
        <div class="swiper-slide" style="background-image:url(../images/cover02.jpg)"></div>
        <div class="swiper-slide" style="background-image:url(../images/cover03.jpg)"></div>
        <div class="swiper-slide" style="background-image:url(../images/cover04.jpg)"></div>
        <div class="swiper-slide" style="background-image:url(../images/cover05.jpg)"></div>
        <div class="swiper-slide" style="background-image:url(../images/cover06.jpg)"></div>
        <div class="swiper-slide" style="background-image:url(../images/cover07.jpg)"></div>
        <div class="swiper-slide" style="background-image:url(../images/cover08.jpg)"></div>
        <div class="swiper-slide" style="background-image:url(../images/cover09.jpg)"></div>
        <div class="swiper-slide" style="background-image:url(../images/cover01.jpg)"></div>
    </div>
    <!-- Add Pagination -->
    <!-- <div class="swiper-pagination"></div> -->
</div>