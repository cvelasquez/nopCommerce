@model Nop.Plugin.Widgets.SwipeSliderPro.Models.PublicInfoModel

@{
    var pictureUrl = ViewData["pictureUrl"]?.ToString() ?? "";
    var link = ViewData["link"]?.ToString() ?? "";
    var dataTransition = ViewData["dataTransition"]?.ToString() ?? "";
    var text = ViewData["text"]?.ToString() ?? "";
    var alttext = ViewData["alttext"]?.ToString() ?? "";

    if (!string.IsNullOrEmpty(pictureUrl))
    {
        if (!string.IsNullOrEmpty(link))
        {
            <div class="swiper-slide" style="background-image:url(@pictureUrl)" onclick="window.location='@link';"></div>            
        }
        else
        {
            <div class="swiper-slide" style="background-image:url(@pictureUrl)"></div>            
        }
    }
}